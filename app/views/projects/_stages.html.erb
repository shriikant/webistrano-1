<% if @project.stages.empty? %>
  <div>
    <strong><%= t("stage.no_configured") %></strong>
    <p><%= t("stage.no_configured_under") %>
  </div>
<% else %>
  <table class="sortable">
    <thead>
      <tr>
        <th width="50%"><%= t("stage.name") %></th>
        <th width="24%"><%= t("stage.hosts") %></th>
        <th width="24%"><%= t("project.deployments") %></th>
        <th width="1%"></th>
        <th width="1%"></th>
      </tr>
    </thead>
    <% for stage in @project.stages %>
      <tr class="<%= cycle :even, :odd, :name => 'stages' %>">
        <td><%= link_to stage.name, project_stage_path(@project, stage) %></td>
        <td><%= stage.hosts.count  %></td>
        <td><%= stage.deployments.count  %></td>
        <td class="nowrap"><%= link_to t("edit"), edit_project_stage_path(@project, stage) %></td>
        <td class="nowrap"><%= link_to t("delete"), project_stage_path(@project, stage), :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>
<% end %>
