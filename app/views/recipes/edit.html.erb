<% content_for(:breadcrumb) do %>
  <%= breadcrumb_box do %>
    <%= link_to t("recipes"), recipes_path %>
    <span class="divider">&raquo;</span>
    <%= link_to @recipe.name, @recipe %>
    <span class="divider">&raquo;</span>
    <%= t("recipe.edit") %>
  <% end %>
<% end %>

<% content_for(:page_title) do %>
  <% @page_title = "#{t('recipe.edit')} - #{@recipe.name}" %>
  <h2><%= t("recipe.edit") %> <%= link_to @recipe.name, recipe_path(@recipe) %></h2>
<% end %>

<div>
  <%= form_for @recipe, :html => {:class => "form-horizontal"} do |f| %>
    <%= render :partial => 'form', :locals => {:form => f} %>
    <div class="form-actions">
      <%= f.submit t("recipe.update"), :class => "btn btn-primary" %>
      <%= link_to t("recipe.back_to"), recipes_path, :class => 'arrow_link ontheright' %>
    </div>
  <% end %>
</div>
