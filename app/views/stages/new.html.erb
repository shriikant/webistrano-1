<% content_for(:breadcrumb) do %>
  <%= breadcrumb_box do %>
    <%= link_to t("projects"), projects_path %>
    <span class="divider">&raquo;</span>
    <%= link_to @project.name, project_path(@project) %>
    <span class="divider">&raquo;</span>
    <%= t("stage.new") %>
  <% end %>
<% end %>

<% content_for(:page_title) do %>
  <% @page_title = "#{t('stage.new')} #{@project.name}" %>
  <h2><%= t("stage.new") %></h2>
<% end %>

<% flashed_errors(:stage) %>

<div>
  <%= form_for @stage, :url => project_stages_path(@project), :html => {:class => "form-horizontal"} do |f| %>
    <%= render :partial => 'form', :locals => {:form => f} %>
    <div class="form-actions">
      <%= f.submit t("stage.create"), :class => "btn btn-primary" %>
      <%= link_to t("project.back_to"), project_path(@project), :class => 'arrow_link ontheright' %>
    </div>
  <% end %>
</div>
